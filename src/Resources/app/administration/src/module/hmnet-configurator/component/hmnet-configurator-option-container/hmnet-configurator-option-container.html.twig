<div class="hmnet-configurator-option-container">
	<div class="hmnet-configurator-option-container__label">
		<hmnet-editable-field v-model="optionModel.name" :label="$tc('hmnet-configurator.table.option.inputLabel')" :placeholder="$tc('hmnet-configurator.table.option.inputPlaceholder')" size="small" :is-editable="isEditable" type="text"/>
		<div class="hmnet-configurator-option-container__label__actions" v-if="isEditable">
			<mt-button variant="critical" size="x-small" @click="onRemoveOption">
				{{ $tc('hmnet-configurator.table.option.removeOption') }}
			</mt-button>
		</div>
	</div>
	<div class="hmnet-configurator-option-container__possibilities">
		<div v-for="possibility in optionModel.possibilities" :key="possibility.id" class="hmnet-configurator-option-container__value">
			<hmnet-editable-field v-model="possibility.multiplicator" :label="$tc('hmnet-configurator.table.possibility.multiplicatorLabel')" size="small" type="number" :is-editable="isEditable"/>
			<hmnet-editable-field v-model="possibility.name" :label="$tc('hmnet-configurator.table.possibility.nameLabel')" :placeholder="$tc('hmnet-configurator.table.possibility.namePlaceholder')" size="small" type="text" :is-editable="isEditable"/>
			<mt-button variant="critical" size="x-small" @click="onRemovePossibility(possibility.id)" v-if="isEditable">
				<mt-icon name="regular-trash" size="0.9rem"/>
			</mt-button>
		</div>
		<div class="hmnet-configurator-option-container__no-possibilities">
			<span v-if="!optionModel.possibilities.length">
				{{ $tc('hmnet-configurator.table.possibility.noPossibilities') }}
			</span>
		</div>
		<div class="hmnet-configurator-option-container__add-possibility" v-if="isEditable">
			<mt-button variant="action" size="x-small" @click="onAddPossibility">
				{{ $tc('hmnet-configurator.table.possibility.addPossibility') }}
			</mt-button>
		</div>
	</div>
	<div class="hmnet-configurator-option-container__prices">
		<div v-for="(price, index) in optionModel.priceTiers" :key="index" class="hmnet-configurator-option-container__price">
			<hmnet-editable-field v-model="price.price" :label="`${$tc('hmnet-configurator.table.price.quantityStartLabel')} ${price.quantityStart} - ${$tc('hmnet-configurator.table.price.quantityEndLabel')} ${price.quantityEnd ?? 'âˆž'}`" size="small" type="price" :is-editable="isEditable"/>
		</div>
	</div>
</div>

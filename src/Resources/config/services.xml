<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="HMnet\Configurator\Core\Content\Configurator\ConfiguratorOptionPossibilityEntity">
            <tag name="shopware.entity"/>
        </service>

        <service id="HMnet\Configurator\Core\Content\Configurator\ConfiguratorOptionEntity">
            <tag name="shopware.entity"/>
        </service>

        <service id="HMnet\Configurator\Core\Content\Configurator\ConfiguratorFieldEntity">
            <tag name="shopware.entity"/>
        </service>

        <service id="HMnet\Configurator\Core\Content\Product\ConfiguratorProductExtension">
            <tag name="shopware.entity.extension"/>
        </service>

        <service id="HMnet\Configurator\Core\Content\Configurator\PriceTierCollectionSerializer">
            <argument type="service" id="validator"/>
            <argument type="service" id="Shopware\Core\Framework\DataAbstractionLayer\DefinitionInstanceRegistry"/>
            <tag name="shopware.field_serializer"/>
        </service>

        <service id="HMnet\Configurator\Storefront\Page\Product\ProductConfiguratorSubscriber">
            <argument type="service" id="hmnet_configurator_field.repository"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="HMnet\Configurator\Core\Checkout\Cart\ConfiguratorCartProcessor">
            <tag name="shopware.cart.processor" />
            <argument type="service" id="HMnet\Configurator\Service\ConfiguratorLineItemHandler" />
            <argument type="service" id="Psr\Log\LoggerInterface" />
            <argument type="service" id="Shopware\Core\Checkout\Cart\Tax\TaxCalculator" />
        </service>

        <service id="HMnet\Configurator\Service\ConfiguratorLineItemHandler">
            <tag name="shopware.cart.line_item.factory" />
        </service>

        <service id="HMnet\Configurator\Core\Checkout\Cart\ConfiguratorCartCollector">
            <tag name="shopware.cart.collector" />
            <argument type="service" id="hmnet_configurator_field.repository"/>
            <argument type="service" id="Psr\Log\LoggerInterface" />
        </service>


    </services>
</container>